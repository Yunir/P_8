<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="130.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UpdateAimController">
   <children>
      <Label prefWidth="500.0" text="%createaim.title">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets bottom="5.0" left="12.0" right="5.0" top="12.0" />
         </VBox.margin>
      </Label>
      <HBox>
         <children>
            <VBox prefHeight="200.0" prefWidth="500.0">
               <children>
                  <Label prefWidth="500.0" text="%main.name" textAlignment="CENTER">
                     <font>
                        <Font size="11.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="7.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="newAimName" prefWidth="650.0" promptText="Write here...">
                     <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </VBox.margin>
                  </TextField>
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="500.0">
               <children>
                  <Label prefWidth="500.0" text="%main.priority">
                     <font>
                        <Font size="11.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="7.0" />
                     </VBox.margin>
                  </Label>
                  <ComboBox fx:id="newAimPriorityBox" prefWidth="150.0">
                     <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </VBox.margin>
                  </ComboBox>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="300.0">
         <children>
            <Button mnemonicParsing="false" onAction="#updateAim" prefWidth="500.0" text="%enter" defaultButton="true">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
